  "bugs": {
    "url": "https://github.com/yourusername/payrollpro/issues"
  },
  "homepage": "https://github.com/yourusername/payrollpro#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
